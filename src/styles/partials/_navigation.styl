
nav#main-nav
  $navHeight = 6em
  $linkTitleFontSize = 1.6em
  $linkTitleHeight = 2em
  $linkSubtitleFontSize = 0
  $linkSubtitleHeight = 0
  $linkSpacingTop = 0.5
  $linkSpacingBottom = 1 - $linkSpacingTop
  $backgroundColor = $opaqueLight
  position: fixed
  z-index: 1000
  top:0
  left: 0
  right: 0
  height: $navHeight
  box-shadow: inset 0 -0.1em $opaqueLighterGray
  background: $backgroundColor
  .logo
    .home-visable &
      $fadeDuration = 0.3s
      top: -2em
      opacity: 0.1
      $animation = cubic-bezier(0.6, 0.04, 0.98, 0.335)//easeInCirc
      transition: opacity $fadeDuration $animation, top 0s linear $fadeDuration+0.1s
    .hack
      font-weight: 300 
      color: hsl(221, 35%, 40%)
    .tbilisi
      font-weight: 700
      text-transform: uppercase
      color: $red

    opacity:1
    $animation = cubic-bezier(0.175, 0.885, 0.32, 1.275)//easeOutBack
    transition: opacity 0.4s $animation, top 0.4s $animation
    font-family: $logoFontFamily
    font-size: 3em
    position: absolute
    left: 0
    top: 0
    bottom: 0
    color: $darkGray
    height: ($navHeight / @font-size)
    line-height: @height
    margin: 0 (3 / @font-size)
  ul
    position: absolute
    margin: 0
    right: 0
    bottom: 0
    top: 0
    li
      display: inline-block
      height: 100%
      .active-faq &.for-faq a,
      .active-sponsors &.for-sponsors a
        box-shadow: inset 0 -3px $blue
      a
        $freeSpace = $navHeight - ($linkTitleHeight + $linkSubtitleHeight)
        padding: $freeSpace*$linkSpacingTop $linkTitleFontSize $freeSpace*$linkSpacingBottom 
        display: block
        box-shadow: inset 0 0 $blue
        transition: all 0.1s linear;
        &:hover
          box-shadow: inset 0 -3px $blue
        span
          display: block
          text-align: left
          font-family: $logoFontFamily
          text-shadow: 0 0.05em white
        .title
          font-size: $linkTitleFontSize
          line-height: ($linkTitleHeight / @font-size)
          color: $darkGray
        .subtitle
          color: $lightGray
          font-size: $linkSubtitleFontSize
          line-height: ($linkSubtitleHeight / @font-size)
        







