.page-sponsors
  $background = $opaqueLight
  h1,h2,h3,h4,h5
    margin: 2em 0 1em

  .center
    text-align: center
  .background
    background: $background
  .sponsors-giga
    .sponsor-item
      width: 16em * 2
      height: 9em * 2
  .sponsors-mega
    .sponsor-item
      width: 16em * 1.50
      height: 9em * 1.50
  .sponsors-kilo
    .sponsor-item
      width: 16em
      height: 9em
  
  .partners,.mediaPartners
    .sponsor-item
      width: 16em
      height: 9em
  .sponsor-item
    display: inline-block
    margin: 1em
    img
      display: inline-block;
      max-width:100%;
      max-height:100%;
      width: auto;
      height: auto;
 