  .sponsors
    text-align: center
  .sponsors-giga
    .sponsor-item
      width: 16em * 1.50
      height: 9em * 1.50
  .sponsors-mega
    .sponsor-item
      width: 16em * 1.30
      height: 9em * 1.30
