@import url('//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css')
@import url('http://fonts.googleapis.com/css?family=Roboto:400,300,700')
@import 'nib'



$logoFontFamily = 'Roboto', sans-serif
$unihackLogoFontFamily = Monaco,Consolas,"Lucida Console",monospace

$white = hsl(0, 0%, 100%)
$darkBlue = hsl(200, 40%, 10%)
$blue = hsl(200, 40%, 30%)
$lightBlue = hsl(200, 40%, 50%)
$darkerGray = hsl(0, 0%, 20%)
$darkGray = hsl(0, 0%, 30%)
$gray = hsl(0, 0%, 40%)
$lightGray = hsl(0, 0%, 70%)
$opaqueLightGray = hsla(0, 0%, 0%, 100% - 70%)
$lighterGray = hsl(0, 0%, 82%)
$opaqueLighterGray = hsl(0, 0%, 82%,95%)
$lightestGray = hsl(0, 0%, 95%)
$opaqueLightestGray = hsla(0, 0%, 95%, 95%)
$opaqueLight = hsla(0, 0%, 100%, 90%)

@import './partials/_centered'
@import './partials/_hidden'
@import './partials/_navigation'
@import './partials/_article'
html, body
  color: $darkGray
  margin: 0
  height: 100%
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
  width: 100%
  font-size: 10px

a
  text-decoration: none
  color $lightBlue

h1 
  font-size: 2em
h2 
  font-size: 1.5em
h3 
  font-size: 1.17em
h5 
  font-size: .83em
h6 
  font-size: .75em
p
  line-height: 1.4em

#main-wrapper
  height: 100%

@import './partials/_page'

@import './pages/_home'
@import './pages/_faq'
@import './pages/_speaker'
@import './pages/_sponsors'